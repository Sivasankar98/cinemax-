<?xml version='1.0' encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 5.3//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-5.3.dtd">

<hibernate-mapping>
    <class name = "com.i2i.cinemax.model.Theatre" table = "theatre">

    <meta attribute = "class-description">
        This class contain the Theatre detail
    </meta>

    <id name = "theatreId" column = "theatre_id" type = "string" length="25">  
     <generator class="assigned">    </generator>
    </id>  

    <property name = "theatreName" column = "theatre_name" type = "string" not-null="true" length="25"/>
    <property name = "phoneNumber" column = "phone_number" type = "string" not-null="true" length="25"/>
    <property name = "emailId" column = "email_Id" type = "string" not-null="true" length="25"/>
    <property name = "theatreLocation" column = "location" type = "string" not-null="true" length="25"/>
    <property name = "status" column = "status" type = "boolean" not-null="true"/>
     
    <property name = "managerFirstName" column = "manager_first_Name" type = "string" not-null="true" length="25"/>
    <property name = "managerLastName" column = "manager_last_Name" type = "string" not-null="true" length="25"/>
    <property name = "managerPhoneNumber" column = "manager_phoneNumber" type = "string" not-null="true" length="25"/>
    <property name = "managerEmailId" column = "manager_emailId" type = "string" not-null="true" length="25"/>
    
    
    <list name = "address" table = "address" lazy = "false" cascade = "all">
        <key column = "theatre_id"/>
        <list-index column = "idx"/>
        <one-to-many class = "com.i2i.cinemax.model.Address"/>
    </list>      
    
    <set name = "bookings" table = "booking" lazy = "false" cascade = "all">
        <key column = "theatre_id"/>
        <one-to-many class = "com.i2i.cinemax.model.BookingMovie"/>
    </set>
     
 <!--   <set name="movies" table="theatre_Movie"  lazy="false" cascade = "all" >
            <key>
                <column name="theatre_id" />
            </key>
            <many-to-many class = "com.i2i.cinemax.model.Movie">
                <column name="movie_id" />
            </many-to-many>
        </set> -->
    
    
  

    </class>
</hibernate-mapping>
