<?xml version='1.0' encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 5.3//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-5.3.dtd">

<hibernate-mapping>
    <class name = "com.i2i.cinemax.model.Address" table = "address">

    <meta attribute = "class-description">
        This class contain the Address detail
    </meta>

    <id name="id" column = "id" type = "int">  
     <generator class="increment">    </generator>
    </id>  
    
    <property name = "doorNumber" column="door_number" type="string" not-null="true" length="25"/>
    <property name = "streetName" column = "street_name" type = "string" not-null="true" length="25"/>
    <property name = "areaName" column = "area_name" type = "string" not-null="true" length="25"/>
    <property name = "cityName" column = "city" type = "string" not-null="true" length="25"/>
    <property name = "pinCode" column = "pincode" type = "string" not-null="true" length="25"/>
    
    <set name = "bookings" table = "booking" lazy = "false" cascade = "all">
        <key column = "address_id"/>
        <one-to-many class = "com.i2i.cinemax.model.BookingMovie"/>
    </set>
     
    
   
    </class>
</hibernate-mapping>
